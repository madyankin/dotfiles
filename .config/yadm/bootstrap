#!/bin/bash

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

log() { echo ""; echo "━━━ $1 ━━━"; }

case "$OSTYPE" in
  darwin*)
    log "macOS Defaults"
    ./scripts/macos.sh

    log "Homebrew"
    ./scripts/homebrew.sh

    log "Xcode License"
    sudo xcodebuild -license accept

    log "iTerm2"
    ./scripts/iterm.sh
    ;;

  linux*)
    log "Linux Setup"
    ./scripts/linux.sh
    ;;
esac

log "ZSH"
./scripts/zsh.sh

log "Cron"
./scripts/cron.sh

echo ""
echo "✓ Bootstrap complete"
