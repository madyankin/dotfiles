{
    "workbench.layoutControl.enabled": false,
    "explorer.openEditors.visible": 1,
    "explorer.autoReveal": false,
    "editor.minimap.enabled": false,
    "workbench.tree.indent": 14,
    "editor.overviewRulerBorder": false,
    "editor.padding.bottom": 14,
    "editor.padding.top": 14,
    "editor.scrollbar.horizontal": "auto",
    "editor.codeLens": false,
    "editor.foldingHighlight": false,
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.colorTheme": "One Dark Pro Night Flat",
    "editor.fontSize": 14,
    "editor.fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 23,
    "terminal.integrated.fontSize": 14,
    "files.autoSave": "onFocusChange",
    "window.systemColorTheme": "auto",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "cursor.composer.textSizeScale": 1.15,
    "workbench.tips.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.editor.showTabs": "single",
    "workbench.activityBar.location": "hidden",
    "workbench.navigationControl.enabled": false,
    "window.commandCenter": false,
    "chat.commandCenter.enabled": false,
    "window.autoDetectColorScheme": true,
    "workbench.preferredDarkColorTheme": "One Dark Pro Night Flat",
    "workbench.preferredHighContrastLightColorTheme": "GitHub Light Default",
    "git.autofetch": true,
    "extensions.ignoreRecommendations": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "chat.mcp.gallery.enabled": true,
    "workbench.editor.empty.hint": "hidden",
    "chat.disableAIFeatures": true,
    "update.releaseTrack": "dev",
    "update.mode": "silentlyApplyOnQuit",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.statusBar.visible": false,
    "git.confirmSync": false,
    "makefile.configureOnOpen": true,
    "diffEditor.ignoreTrimWhitespace": false
}
